<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiwang.jxw" >
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="23" />
    <!-- 申明权限  访问网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 申明权限 操作SD卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <application
        android:name=".config.TApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.StartAppActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主界面 -->
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:exported="false"
            android:theme="@style/AppTheme" >
        </activity>

        <!-- 退出Activity -->
        <activity
            android:name=".activity.ExitActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:exported="false"
            android:theme="@android:style/Theme.NoDisplay" />

        <!-- 新闻详情 -->
        <activity
            android:name=".activity.NewsDetailActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:theme="@style/AppTheme" >
        </activity>

        <!-- 新闻详情 -->
        <activity
            android:name=".activity.TestActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:theme="@style/AppTheme" >
        </activity>

        <!-- 登录Activity -->
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:exported="false"
            android:screenOrientation="portrait"
            >
        </activity>

        <!-- 注册Activity -->
        <activity
            android:name=".activity.RegisterActivity"
            android:label="@string/title_activity_login"
            android:exported="false"
            android:screenOrientation="portrait"
            >
        </activity>


        <!-- 发布Activity -->
        <activity
            android:name=".activity.ApplyWorkActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_login" >
        </activity>

        <!-- 选择多张图片 -->
        <activity
            android:name=".activity.PickOrTakeImageActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_login" >
        </activity>

        <!-- 选择多张图片预览效果 -->
        <activity
            android:name=".activity.PickBigImagesActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_login" >
        </activity>

        <!-- 服务协议 -->
        <activity
            android:name=".activity.ServiceProtocolActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_login" >
        </activity>


        <!-- 发帖 -->
        <activity
            android:name=".activity.PublishNewsActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_login" >
        </activity>

        <!-- 新闻图片集合 -->
        <activity
            android:name=".activity.NewsImagesActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_login" >
        </activity>



        <!-- 监听网络变化广播 -->
        <receiver
            android:name=".receiver.NetworkChangeReceiver"
            android:label="NetworkConnection">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>


        <meta-data android:value="569615b6e0f55aeacf000acb" android:name="UMENG_APPKEY"></meta-data>
        <meta-data android:value="android" android:name="UMENG_CHANNEL"/>


    </application>
</manifest>
