<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_100"
    >
    <!--评论弹出前-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/comment_before_ll"

        android:padding="8dp"
        >
        <TextView
            android:id="@+id/showComment_btn"
            style="@style/common_btn1"
            android:text="写评论..."
            android:textColor="@color/gray_500"
            android:background="@drawable/white_bg"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:layout_weight="1"
            />

        <!--跳至 回复列表-->
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/show_replies_rl"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/replies"
                android:layout_centerInParent="true"
                android:id="@+id/image_iv"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="16dp"
                android:background="@drawable/red_bg"
                android:textColor="@color/white"
                android:text="10"
                android:id="@+id/replies_tv"
                android:padding="2dp"
                android:gravity="center"
                android:textSize="8sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="8dp"

                />
        </RelativeLayout>
    </LinearLayout>
    <!--评论弹出-->
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:id="@+id/commenting_ll"
        android:visibility="gone"
        android:background="@color/gray_100"

        android:orientation="vertical"
        android:layout_height="wrap_content">
        <!--输入内容-->
        <com.xiwang.jxw.widget.RichEditText
            android:id="@+id/comment_edt"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:hint="说点什么？"
            android:background="@drawable/white_bg"
            android:textColor="@color/black_transparent_87"
            android:textColorHint="@color/black_transparent_26"
            android:gravity="top"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--表情布局-->
            <com.xiwang.jxw.widget.EmojiView
                android:id="@+id/emoji_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ></com.xiwang.jxw.widget.EmojiView>
            <TextView
                style="@style/text_btn"
                android:id="@+id/huifu_btn"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="发布"
                android:padding="0dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:background="@drawable/bule_btn"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

