<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="8dp"
    android:background="@color/gray_100"
    android:layout_height="match_parent">
    <!--输入内容-->
    <com.xiwang.jxw.widget.RichEditText
        android:id="@+id/content_edt"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:hint="说点什么？"
        android:background="@color/white"
        android:textColor="@color/black_transparent_87"
        android:textColorHint="@color/black_transparent_26"
        android:gravity="top"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--表情布局-->
        <com.xiwang.jxw.widget.EmojiView
            android:id="@+id/emoji_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            ></com.xiwang.jxw.widget.EmojiView>

        <TextView
            style="@style/text_btn"
            android:id="@+id/fabu_btn"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="发布"
            android:padding="0dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:background="@drawable/bule_btn"
            />
    </RelativeLayout>

</LinearLayout>