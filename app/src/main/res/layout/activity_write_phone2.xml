<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" >
    <include layout="@layout/tootbar_common"></include>

    <com.xiwang.jxw.widget.MyInputEditView2
        android:id="@+id/register_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:leftText="手机号"
        app:rightHintText="请输入手机号" >
    </com.xiwang.jxw.widget.MyInputEditView2>

    <!-- 登录按钮 -->

    <TextView
        android:id="@+id/register_btn_next"
        style="@style/common_btn1"
        android:layout_marginTop="32dp"
        android:enabled="false"
        android:background="@drawable/origan_btn"
        android:text="下一步" />

</LinearLayout>