<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiwang.jxw.activity.LoginActivity">
    <include layout="@layout/tootbar_common"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        >
        <com.xiwang.jxw.widget.DeleteEditText
            android:id="@+id/username_edt"

            android:hint="用户名/手机号"
            style="@style/etd_1"
           />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/black_transparent_26"
            ></View>
        <com.xiwang.jxw.widget.DeleteEditText
            android:id="@+id/pwd_edt"
            android:hint="密码"
            style="@style/etd_1"
            android:paddingLeft="8dp"
            android:password="true"
            />

    </LinearLayout>


    <!--登录按钮-->
    <TextView
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/origan_btn"
        android:layout_marginTop="24dp"
        android:text="登 录"
        android:textSize="16sp"
        android:clickable="true"
        android:textColor="@color/white"
        android:gravity="center"
        />

    <!--快速登录 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/register_btn"
            android:text="快速注册>>"
            style="@style/text_btn"
            />

    <!--快速登录 -->

        <TextView
            android:id="@+id/tx_login_btn"
            android:text="腾讯登录>>"
            style="@style/text_btn"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
</LinearLayout>
