<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiwang.jxw.activity.LoginActivity">
    <include layout="@layout/tootbar_common"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        >
        <com.xiwang.jxw.widget.DeleteEditText
            android:id="@+id/username_edt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="用户名/手机号"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:textColor="@color/black_transparent_54"
            android:textColorHint="@color/black_transparent_54"
            android:background="@color/trans"
           />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/black_transparent_26"
            ></View>
        <com.xiwang.jxw.widget.DeleteEditText
            android:id="@+id/pwd_edt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="密码"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:password="true"
            android:textColor="@color/black_transparent_87"
            android:textColorHint="@color/black_transparent_54"
            android:background="@color/trans"
            />

    </LinearLayout>


    <!--登录按钮-->
    <TextView
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/origan_btn"
        android:layout_marginTop="24dp"
        android:text="登 录"
        android:textSize="16sp"
        android:clickable="true"
        android:textColor="@color/white"
        android:gravity="center"
        />
</LinearLayout>
