<resources>
    <!-- 首页TAB -->
    <declare-styleable name="MyRadioView">
        <attr name="text" format="reference|string" />
        <attr name="img1" format="reference" />
        <attr name="img0" format="reference" />
    </declare-styleable>

    <!-- 首页的栏目栏 -->
    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="pstsIndicatorColor" format="color" />
        <attr name="pstsUnderlineColor" format="color" />
        <attr name="pstsDividerColor" format="color" />
        <attr name="pstsIndicatorHeight" format="dimension" />
        <attr name="pstsUnderlineHeight" format="dimension" />
        <attr name="pstsDividerPadding" format="dimension" />
        <attr name="pstsTabPaddingLeftRight" format="dimension" />
        <attr name="pstsScrollOffset" format="dimension" />
        <attr name="pstsTabBackground" format="reference" />
        <attr name="pstsShouldExpand" format="boolean" />
        <attr name="pstsTextAllCaps" format="boolean" />
    </declare-styleable>


    <!-- 首页TAB -->
    <declare-styleable name="MyDialogView">
        <attr name="topHinttext" format="reference|string" />
        <attr name="inputHinttext" format="reference|string" />
        <attr name = "default_lColor" format = "color" />
        <attr name = "textSize" format = "dimension" />
        <attr name = "input_height" format = "dimension" />
        <attr name = "change_lColor" format = "color" />
        <attr name = "dialog_title" format = "reference|string" />
        <attr name = "is_hint" format = "boolean" />
    </declare-styleable>


    <!-- 加载控件-->
    <declare-styleable name="PercentView">
        <attr name = "background_color" format = "color" />
        <attr name = "draw_color" format = "color" />
        <attr name = "is_rect" format="boolean" />
    </declare-styleable>

    <!-- 上传图片控件 -->
    <declare-styleable name="UploadImgView">
        <attr name = "horizontalSpacing" format = "dimension" />
        <attr name = "verticalSpacing" format = "dimension" />
        <attr name = "tag" format = "reference|string" />
        <attr name = "child_with" format = "dimension" />
        <attr name = "child_height" format = "dimension" />
        <attr name = "numColumns" format = "integer" />
        <attr name = "isAdd" format = "boolean" />

    </declare-styleable>

    <declare-styleable name="MyInputEditView">
        <attr name="lineColor1" format="color" />
        <attr name="lineColor2" format="color" />
        <attr name="leftText" format="string" />
        <attr name="rightText" format="string" />
        <attr name="rightHintText" format="string" />
        <attr name="isPwd" format="boolean" />
        <attr name="inputType" format="integer" />
        <attr name="isLeft" format="boolean" />
        <attr name="isRight" format="boolean" />
        <attr name="leftTextColor" format="color" />
        <attr name="rightTextColor" format="color" />
    </declare-styleable>
</resources>