<resources>


    <!--
Base application theme, dependent on API level. This theme is replaced
by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
-->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

        <item name="colorPrimaryDark">@color/orange_700</item>
        <item name="colorPrimary">@color/orange_500</item>
        <item name="android:windowBackground">@color/gray_50</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>


    </style>

    <style name="Mine.ProgressBar" parent="Base.Widget.AppCompat.ProgressBar">

    </style>

    <style name="Mine.ProgressBar16" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:minWidth">16dp</item>
        <item name="android:maxWidth">16dp</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <!-- 横线 -->
    <style name="line_view_w">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#e0e0e0</item>
    </style>

    <style name="line_view_w2">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:background">@color/gray_200</item>
    </style>

    <!-- 没有背景的Dialog -->
    <style name="NobackDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 设置  样式1 -->

    <style name="setting_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/white_btn</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- 通用 文本样式1  -->
    <style name="common_text1" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_transparent_54</item>

    </style>

    <!-- 通用 文本样式1  -->
    <style name="icon_24">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <!-- 通用 按钮样式1  -->
    <style name="common_btn1" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/white_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 文本按钮  -->
    <style name="text_btn" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/trans</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:paddingRight">16dp</item>
    </style>



    <!-- 文本按钮  -->
    <style name="etd_1" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@color/trans</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black_transparent_87</item>
        <item name="android:textColorHint">@color/black_transparent_26</item>

    </style>

    <style name="etd_2" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="default_lColor">@color/black_transparent_26</item>
        <item name="change_lColor">@color/orange_500</item>

    </style>







    <style name="MenuTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme_Transparent" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowBackground">@drawable/bg_login_layout</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="push_style">
        <item name="android:hint">@string/style_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="push_alias">
        <item name="android:hint">@string/alias_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="push_tag">
        <item name="android:hint">@string/tag_hint</item>
        <item name="android:textSize">14sp</item>
    </style>




    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_bottom</item>
    </style>

</resources>
